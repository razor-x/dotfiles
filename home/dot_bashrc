# From https://wiki.archlinux.org/title/Fish
if [[ $(ps --no-header --pid=$PPID --format=comm) != "fish" \
   && -z ${BASH_EXECUTION_STRING} \
   && ${SHLVL} == 1 \
   && && -x $(command -v fish) ]]
then
  shopt -q login_shell && LOGIN_OPTION='--login' || LOGIN_OPTION=''
  exec fish $LOGIN_OPTION
fi
