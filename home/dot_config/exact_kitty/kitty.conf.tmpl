# Limit the scrollback to a finite value.
scrollback_lines 12000

# Disable the audio bell.
enable_audio_bell no

# Required for smart-splits integration.
# https://github.com/mrjones2014/smart-splits.nvim#kitty
allow_remote_control socket-only
listen_on unix:@mykitty

# Set default and enabled layouts.
enabled_layouts splits,tall,fat,horizontal,vertical,stack

# Enable cursor trail.
cursor_trail 10

# Define keyboard shortcuts.
include keymap.conf

# BEGIN_KITTY_THEME
# {{ template "theme/kitty" . }}
include current-theme.conf
# END_KITTY_THEME

# BEGIN_KITTY_FONTS
font_family      family="{{ .fonts.kitty }}"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS
