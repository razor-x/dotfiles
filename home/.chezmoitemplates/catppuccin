{{- $theme := "default" -}}

{{- $catppuccin := index .catppuccin $theme -}}
{{- $flavor := $catppuccin.flavor -}}
{{- $accent := $catppuccin.accent -}}

{{- $root := joinPath .chezmoi.homeDir ".local" "share" "theme" "catppuccin" .app -}}

{{- if eq .app "atuin" -}}
  {{ joinPath $root "themes" $flavor (list "catppuccin" $flavor $accent | join "-") -}}.toml
{{- else if eq .app "eza" -}}
  {{ joinPath $root "themes" $flavor (list "catppuccin" $flavor $accent | join "-") -}}.yml
{{- else if eq .app "gitui" -}}
  {{ joinPath $root "themes" (list "catppuccin" $flavor | join "-") -}}.ron
{{- else if eq .app "kitty" -}}
  catppuccin-{{ $flavor }}
{{- else if eq .app "yazi" -}}
  catppuccin-{{ $flavor }}
{{- else if eq .app "zellij" -}}
  catppuccin-{{ $flavor }}
{{- else -}}
  {{- fail (printf "No catppuccin theme installed for %s." .app) -}}
{{- end -}}
